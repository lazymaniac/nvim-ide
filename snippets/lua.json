{
  "fixme": {
    "body": "-- FIXME: ${1:reason}",
    "prefix": "fixme"
  },
  "keymapping": {
    "body": [
      "{",
      "  '${1:<leader>}',",
      "  '${2:<cmd>ex<cr>}',",
      "  mode = { 'n', 'v' },",
      "  desc = '${3:desc}',",
      "},"
    ],
    "prefix": "keymapping"
  },
  "keymapping_fn": {
    "body": [
      "{",
      "  '${1:Mapping}',",
      "  function()",
      "    ${2:Function}",
      "  end,",
      "  mode = { 'n', 'v' },",
      "  desc = '${3:Description}',",
      "},"
    ],
    "prefix": "keymapping_fn"
  },
  "plug_doc": {
    "body": [
      "-- [${1:plugin name}] - ${2:description}",
      "-- see: `:h ${1:help-tag}`",
      "-- link: ${3:link-to-repo}"
    ],
    "prefix": "plug_doc"
  },
  "plug_group": {
    "body": "-- [[ ${1:group_name} ]] ---------------------------------------------------------------",
    "prefix": "plug_group"
  },
  "stylua_ignore": {
    "body": "-- stylua: ignore",
    "prefix": "stylua_ignore"
  },
  "todo": {
    "body": "-- TODO: ${1:what to do}",
    "prefix": "todo"
  }
}
